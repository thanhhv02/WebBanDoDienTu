@model WebBanDoDienTu.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_BanDoDienTuLayout.cshtml";
    //var test = ViewBag
}


    <!--breadcrumbs area start-->
    <div class="breadcrumbs_area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_content">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">home</a></li>
                            <li>Login</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--breadcrumbs area end-->

    <section class="account" >
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="account-contents" style="background: url(' /img/about/about1.jpg'); background-size: cover;">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <div class="account-thumb">
                                    <h2>Login now</h2>
                                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis consectetur similique deleniti pariatur enim cumque eum</p>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <div class="account-content">
                                    <form asp-action="Login" asp-controller="Login" method="post" >
                                        <div class="single-acc-field">
                                            @if (ViewBag.loginSucces != null)
                                            {

                                                <p class="alert alert-success">@ViewBag.loginSucces</p>
                                            }
                                            @if (ViewBag.error != null)
                                            {
                                                <p class="alert alert-danger">@ViewBag.error</p>
                                            }
                                            <label asp-for="Email">Email</label>
                                            <input asp-for="Email" type="email" id="email" placeholder="Enter your Email">


                                        </div>
                                        <div class="single-acc-field">
                                            <label asp-for="Password">Password</label>
                                            <input asp-for="Password" type="password" id="password" placeholder="Enter your password">
                                        </div>
                                        @*<div class="single-acc-field boxes">
                                            <input type="checkbox" id="checkbox">
                                            <label for="checkbox">Remember me</label>
                                        </div>*@
                                        <div class="single-acc-field">
                                            <button asp-action="Login" type="submit">Login Account</button>
                                        </div>
                                        <a href="forget-password.html">Forget Password?</a>
                                        <a href="register.html">Not Account Yet?</a>
                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

   